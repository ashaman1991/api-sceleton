{
  "extends": "airbnb",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": false,
      "impliedStrict": false
    }
  },
  "globals": {
    "_": true,
    "request": true,
    "ApiError": true,
    "settings": true,
    "assert": true,
    "User": true
  },
  "env": {
    "node": true,
    "es6": true,
    "mocha": true
  },
  "rules": {
    "comma-dangle": [
      2,
      "never"
    ],
    "arrow-body-style": [
      "error",
      "always"
    ],
    "no-param-reassign": 0,
    "no-empty": 1,
    "newline-per-chained-call": [
      "error",
      {
        "ignoreChainWithDepth": 2
      }
    ],
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": true
      }
    ],
    "no-plusplus": 0
  }
}